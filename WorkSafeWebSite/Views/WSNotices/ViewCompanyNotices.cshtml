@model IEnumerable<WorkSafeWebSite.Models.WSNotice>

@{
    ViewData["Title"] = "Index";
}

<head>
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                    'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-MZM6DB3');
    </script>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <meta name="description" content="WorkSafe is New Zealand’s primary workplace health and safety regulator." />
    <meta name="author" content="WorkSafe New Zealand" />
    <link rel="stylesheet" type="text/css" href="https://cloud.typography.com/7083976/7810172/css/fonts.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style-f962a90.css" media="screen" />
</head>

<h1>Notices</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table>
    <thead>
        <tr>
            <th>
                Business Name
            </th>
            <th>
                Business Number
            </th>
            <th>
               Location
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.industry)
        </th>*@
            <th>
                Date Issued
            </th>
            @*<th>
            @Html.DisplayNameFor(model => model.issued_To)
        </th>*@
            <th>
                Notice Type
            </th>
            <th>
                Topic
            </th>
            <th>
                DownLoad
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.business_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.business_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.location)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.industry)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.date_Issued)
            </td>
            @*<td>
            @Html.DisplayFor(modelItem => item.issued_To)
        </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.notice_Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.topic)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.pdf_URL)*@
                @* Load pdf_URL from database and put into Model. Test if this link is working or not *@
                <a href='@Url.Content("~/PDF_Folder/"+ item.pdf_URL)' target="_blank">
                    Download
                </a>

            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
