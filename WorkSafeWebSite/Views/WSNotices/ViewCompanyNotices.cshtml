@model IEnumerable<WorkSafeWebSite.Models.WSNotice>

@{
    ViewData["Title"] = "Index";
}

<head>
    <script>
        (function (w, d, s, l, i) {
            w[l] = w[l] || []; w[l].push({
                'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
            }); var f = d.getElementsByTagName(s)[0],
                j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : ''; j.async = true; j.src =
                    'https://www.googletagmanager.com/gtm.js?id=' + i + dl; f.parentNode.insertBefore(j, f);
        })(window, document, 'script', 'dataLayer', 'GTM-MZM6DB3');
    </script>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />

    <meta name="description" content="WorkSafe is New Zealand’s primary workplace health and safety regulator." />
    <meta name="author" content="WorkSafe New Zealand" />
    <link rel="stylesheet" type="text/css" href="https://cloud.typography.com/7083976/7810172/css/fonts.css" />
    <link rel="stylesheet" type="text/css" href="~/css/site.css" />
    <link rel="stylesheet" type="text/css" href="~/css/style-f962a90.css" media="screen" />
</head>

<h3>Notices</h3>

<table>
    <thead>
        <tr>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>           
            <div class="rowBusinessCards">
                <div class="card">
                    <div class="row">
                        <div class="col-10"><a href="#">@Html.DisplayFor(modelItem => item.business_Name)</a></div>
                        <div class="col-2">Date: @Html.DisplayFor(modelItem => item.date_Issued)</div>

                        <div class="col-6">Topic: @Html.DisplayFor(modelItem => item.topic)</div>
                        <div class="col-3">Region: @Html.DisplayFor(modelItem => item.location)</div>
                        <div class="col-2">Status: @Html.DisplayFor(modelItem => item.current_notice_status)</div>
                        <div class="col-1">TraficLight</div>

                        <div class="col-4">Prohibtion Notice # xxxxxx: </div>
                        <a asp-action="NavigateToNoticeDtails" asp-route-id="@item.Id">Details</a>
                        <a href='@Url.Content("~/PDF_Folder/"+ item.pdf_URL)' target="_blank">
                            Download
                        </a>
                        <div class="col-8"></div>

                        <div class="col-12">Summery: Unsafe Asbestos removal carried out by unqualified asbestos removalist</div>
                    </div>
                </div>
            </div>
            <div><br /></div>

        </tr>
        }
    </tbody>
</table>
